---
import { ThemeToggle } from "./ThemeToggle";
import { MobileMenu } from "./MobileMenu";
import { NavLink } from "./NavLink";

const links = [
	{ href: "#", label: "Inicio" },
	{ href: "#tech-stack", label: "Stack" },
	{ href: "#experience", label: "Experiencia" },
	{ href: "#projects", label: "Proyectos" },
	{ href: "#about", label: "Sobre m√≠" },
	{ href: "#contact", label: "Contacto" },
];
---

<header
	class="w-full px-6 py-4 bg-white dark:bg-zinc-900 border-b border-zinc-200 dark:border-zinc-800 shadow-sm fixed top-0 z-50"
>
	<nav class="max-w-7xl mx-auto flex items-center justify-between">
		<a href="/" class="text-xl font-bold text-zinc-900 dark:text-white"> Cristopher Scott </a>

		<!-- Desktop Nav -->
		<ul class="hidden md:flex space-x-6 text-sm font-medium">
			{
				links.map((link) => (
					<li>
						<NavLink href={link.href} label={link.label} client:load />
					</li>
				))
			}
		</ul>

		<div class="flex items-center gap-4">
			<ThemeToggle client:load />
			<MobileMenu client:load />
		</div>
	</nav>
</header>
