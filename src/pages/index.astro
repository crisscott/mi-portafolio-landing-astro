---
import Layout from "../layouts/Layout.astro";
import { Github, Linkedin, Mail, Download } from "lucide-react";
import { TerminalHero } from "../components/TerminalHero";
import TechStack from "../components/TechStack.astro";
import { ExperienceTimeline } from "../components/ExperienceTimeline";
import { ProjectsSection } from "../components/ProjectsSection";
import { AboutSection } from "../components/AboutSection";
import { ContactSection } from "../components/ContactSection";
import { RevealOnScroll } from "../components/ui/RevealOnScroll";
---

<Layout title="Cristopher Scott - Full Stack Developer">
	<section
		class="flex flex-col items-center justify-center text-center max-w-4xl mx-auto mt-10 sm:mt-20 px-4 min-h-[calc(100vh-100px)]"
	>
		<RevealOnScroll client:load width="100%">
			<h1 class="text-4xl sm:text-6xl font-bold mb-6">
				Â¡Hola! Soy{" "}
				<span
					class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400"
				>
					Cristopher Scott
				</span>
			</h1>
		</RevealOnScroll>

		<RevealOnScroll client:load width="100%" delay={0.1}>
			<h2 class="text-xl sm:text-2xl font-medium mb-8 text-zinc-600 dark:text-zinc-300">
				Analista Programador & Fullstack Developer | +5 aÃ±os integrando sistemas empresariales ðŸš€
			</h2>
		</RevealOnScroll>

		<RevealOnScroll client:load width="100%" delay={0.2}>
			<div class="flex flex-wrap justify-center gap-4 mb-12">
				<a
					href="/cv.pdf"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors font-medium hover:scale-105 transform duration-200 shadow-lg hover:shadow-blue-500/25"
				>
					<Download size={20} />
					Descargar CV
				</a>
				<div class="flex gap-4">
					<a
						href="https://github.com/crisscott"
						target="_blank"
						rel="noopener noreferrer"
						class="p-3 bg-zinc-100 dark:bg-zinc-800 rounded-full hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-all hover:scale-110 text-zinc-900 dark:text-white"
						aria-label="GitHub"
					>
						<Github size={20} />
					</a>
					<a
						href="https://www.linkedin.com/in/crisscott"
						target="_blank"
						rel="noopener noreferrer"
						class="p-3 bg-zinc-100 dark:bg-zinc-800 rounded-full hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-all hover:scale-110 text-zinc-900 dark:text-white"
						aria-label="LinkedIn"
					>
						<Linkedin size={20} />
					</a>
					<a
						href="mailto:crisscottmendoza@gmail.com"
						class="p-3 bg-zinc-100 dark:bg-zinc-800 rounded-full hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-all hover:scale-110 text-zinc-900 dark:text-white"
						aria-label="Email"
					>
						<Mail size={20} />
					</a>
				</div>
			</div>
		</RevealOnScroll>

		<TerminalHero client:visible />
	</section>

	<div id="tech-stack">
		<RevealOnScroll client:visible width="100%">
			<TechStack />
		</RevealOnScroll>
	</div>

	<div id="experience">
		<ExperienceTimeline client:visible />
	</div>

	<ProjectsSection client:visible />

	<AboutSection client:visible />

	<ContactSection client:visible />
</Layout>
